<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.nttdata.parkingmobile.ReleaseActivity">

    <TextView
        android:id="@+id/textUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textAssignedSpot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtSelectDate"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/textAssignedSpot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT DATE"
        android:id="@+id/btnSelectDate"
        android:layout_alignTop="@+id/txtSelectDate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnRelease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/btnSelectDate"
        android:layout_alignLeft="@+id/textUser"
        android:layout_alignStart="@+id/textUser"
        android:layout_marginTop="106dp"
        android:layout_alignRight="@+id/textUser"
        android:layout_alignEnd="@+id/textUser" />


    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Back"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnSelectDate"
        android:layout_alignStart="@+id/btnSelectDate"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />
</RelativeLayout>
